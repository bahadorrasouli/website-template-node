<!DOCTYPE html>
<html lang="en">
<%- include('components/head', {title : data.company_name}) %>
<body>
  <!-- main-header-->
  <%- include('components/main-header',{pageName: 'company'}) %>
  <!-- make color sting standard for URL-->
  <% let color = data.color.split("#") %> 

  <div class="container mx-auto grid grid-cols-2">
    <div>
      <img src="https://dummyimage.com/600x400/<%= color %>/fff.jpg" alt="">
    </div>
    <div class="pt-28">
      <h1 class="text-5xl text-secondary font-black mb-5">Company <%= data.company_name %></h1>
      <h3 class="text-xl mb-4">Manager: <%= data.manager_name %> </h3>
      <!-- star-rate component-->
      <div class="mb-4">
        <%- include('components/star-rate', {rate:data.rate}) %> 
      </div>
      <p><%= data.content  %> </p>
    </div>
  </div>
</body>
</html>